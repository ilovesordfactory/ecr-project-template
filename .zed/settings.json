// Folder-specific settings
//
// For a full list of overridable settings, and general information on folder-specific settings,
// see the documentation: https://zed.dev/docs/configuring-zed#folder-specific-settings
{
  "lsp": {
    "luau-lsp": {
      "settings": {
        "luau-lsp": {
          "completion": {
            "imports": {
              "enabled": true,
              "suggestServices": true,
              "suggestRequires": true
            }
          },
          "require": {
            "mode": "relativeToFile",
            "directoryAliases": {
              "@spkg": "./ServerPackages/",
              "@pkg": "./Packages/",
              "@ecr": "./Packages/ecr",
              "@vide": "./Packages/vide",

              "@client": "src/client/",
              "@shared": "src/shared/",
              "@server": "src/server/",

              "@cts": "src/shared/components",

              "@defs": "src/shared/defs",
              "@consts": "src/shared/constants",
              "@configs": "src/shared/configs",
              "@utils": "src/shared/utils",

              "@app": "src/app",
              "@composables": "src/app/composables",
              "@ui": "src/app/components",
              "@props": "src/app/props",

              "@net": "src/shared/network"
            }
          }
        },
        "ext": {
          "roblox": {
            "enabled": true,
            "security_level": "roblox_script"
          },
          "fflags": {
            "override": {
              "LuauTinyControlFlowAnalysis": "true"
            }
          }
        }
      }
    }
  },
  "languages": {
    "Luau": {
      "formatter": {
        "external": {
          "command": "stylua",
          "arguments": ["-"]
        }
      },
      "format_on_save": "on"
    }
  }
}
